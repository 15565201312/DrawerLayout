<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout

    android:id="@+id/liner"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.day01_test.MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_zhibojian_shu_jp_click" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="我是地图"
            android:gravity="center"/>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#4d00eeac"
       >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/rad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton

                    android:padding="5dp"
                    android:background="@drawable/set"
                    android:button="@null"
                    android:textColor="#FFF"
                    android:text="我的"
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/but_my"
                    android:layout_margin="10dp"/>
                <RadioButton
                    android:textColor="#FFF"
                    android:padding="5dp"
                    android:background="@drawable/set"
                    android:button="@null"
                    android:text="设置"
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/but_shezi"
                    android:layout_margin="10dp"/>

                <RadioButton
                    android:textColor="#FFF"
                    android:padding="5dp"
                    android:background="@drawable/set"
                    android:button="@null"
                    android:text="流量"
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/but_liuliang"
                    android:layout_margin="10dp"/>
                <RadioButton
                    android:textColor="#FFF"
                    android:padding="5dp"
                    android:background="@drawable/set"
                    android:button="@null"
                    android:text="蓝牙"
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/but_lanya"
                    android:layout_margin="10dp"/>
            </RadioGroup>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#F00"></LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragment"></FrameLayout>
        </LinearLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
